using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

 
class LuaCMUIButtonLib
{
    class CMUIButtonInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(QKUIButton); } }
        public string name { get { return LuaCMUIButtonLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUIButtonLib._wrap(lua, cmp as UIButton);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    //static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUIButton";



    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("SetIsEnabled",M_SetIsEnabled),
            new NameFuncPair("GetIsEnabled",M_GetIsEnabled),
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
            
        };

        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMUIButtonInfo());
        return 1;
    }


    public static void _wrap(ILuaState lua, UIButton comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static UIButton Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<UIButton>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }
     

    static int M_SetIsEnabled(ILuaState lua)
    {
        //in self,bool
        //out nil
        UIButton self = Lua2Obj(lua, 1);
        self.isEnabled = lua.ToBoolean(2);
        return 0;
    }

    static int M_GetIsEnabled(ILuaState lua)
    {
        //in self
        //out bool
        UIButton self = Lua2Obj(lua, 1);
        lua.PushBoolean(self.isEnabled);
        return 1;
    }
}
 