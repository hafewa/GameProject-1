-- 构造函数
function item:initialize(name, id, nameCN, desc, max_num, _type, price)
    self.itemName = name
    -- 物品名称
    self.itemID = id
    -- 物品ID
    self.itemNameCN = nameCN
    -- 物品中文名
    self.itemDesc = desc
    -- 物品说明
    self.itemIcon = GameResFactory.Instance():GetGoFromPrefab(name)
    -- 物品图标
    self.itemMaxNum = max_num
    -- 物品数量
    self.itemType = _type
    -- 物品数量上
    self.itemPrice = price
    -- 物品类型
    self.itemNum = 1
    -- 物品价格
end

