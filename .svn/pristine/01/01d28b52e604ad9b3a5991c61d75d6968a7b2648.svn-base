using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMScrollItemLib
{
    class CMScrollItemInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(LuaScrollItem); } }
        public string name { get { return LuaCMScrollItemLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMScrollItemLib._wrap(lua, cmp as LuaScrollItem);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
 //   static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMScrollItem";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {             
            new NameFuncPair("BindClass",M_BindClass),   
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMScrollItemInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, LuaScrollItem comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static LuaScrollItem Lua2Obj(ILuaState lua, int index)
    {
        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<LuaScrollItem>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    static int M_BindClass(ILuaState lua)
    {
        //in self,table
        LuaScrollItem self = Lua2Obj(lua, 1);

        LuaMemberHelper.CheckClass(lua, 2);

        lua.PushValue(2);
        int classRef = lua.L_Ref(LuaDef.LUA_REGISTRYINDEX);
       // self.SetLuaClass(lua, classRef);

        return 0;
    }
     
} 
