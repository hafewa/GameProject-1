using UnityEngine;
using System.Collections;
using System.Collections.Generic;
using UnityEditor;
public class LMTools : EditorWindow
{

	// Use this for initialization
	 [MenuItem("LMTools/GetName")]
    static void GetName()
    {
        //创建窗口
        string str = "";
        GameObject go = Selection.activeGameObject;
        List<string> list = new List<string>();
        list.Add(go.name);
        while (go.transform.parent != null)
        {
            go = go.transform.parent.gameObject;
            list.Add(go.name);
        }
        for (int i = list.Count - 1; i > 0;--i )
        {
            str = str + list[i] + "/";
        }
        str = str + list[0];
        Debug.LogError(str);
    }
    [MenuItem("LMTools/GetPos")]
     static void GetPos()
     {
         GameObject go = Selection.activeGameObject;
         if (go != null)
             Debug.LogError(go.transform.position + " " + go.transform.localPosition);
         else
             Debug.LogError("=======activeGameObject is null====");
     }
