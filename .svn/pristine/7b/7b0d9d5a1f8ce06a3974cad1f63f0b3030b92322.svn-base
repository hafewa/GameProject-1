using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMUIScrollPointLib
{
    class ScrollPointInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(UIScrollPoint); } }
        public string name { get { return LuaCMUIScrollPointLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUIScrollPointLib._wrap(lua, cmp as UIScrollPoint);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    // static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUIScrollPoint";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {
            new NameFuncPair("SetIndex",M_SetIndex),
            new NameFuncPair("GetIndex",M_GetIndex),
            new NameFuncPair("RememberChild",m_RememberChild),
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new ScrollPointInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, UIScrollPoint comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static UIScrollPoint Lua2Obj(ILuaState lua, int index)
    {

        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<UIScrollPoint>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }


    static int M_GetIndex(ILuaState lua)
    {
        UIScrollPoint self = Lua2Obj(lua, 1);
        lua.PushInteger(self.GetCurrentIndex());
        return 1;
    }

    static int M_SetIndex(ILuaState lua)
    {
        UIScrollPoint self = Lua2Obj(lua, 1);
        int wanttoIndex = lua.L_CheckInteger(2);
        self.SetIndex(wanttoIndex);
        //LuaScrollPointLib._wrap(lua, self);
        return 0;
    }
    static int m_RememberChild(ILuaState lua)
    {
        UIScrollPoint self = Lua2Obj(lua, 1);
        lua.PushInteger(self.RememberChild());
        return 1;
    }
}
