using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMUIParticleSystemLib
{
    class CMUIParticleSystemInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(ParticleSystem); } }
        public string name { get { return LuaCMUIParticleSystemLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUIParticleSystemLib._wrap(lua, cmp as ParticleSystem);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    //static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUIParticleSystem";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("Pause",M_Pause),
            new NameFuncPair("Play",M_Play),
            new NameFuncPair("Simulate",M_Simulate),//(float)
            new NameFuncPair("Stop",M_Stop),
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMUIParticleSystemInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, ParticleSystem comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static ParticleSystem Lua2Obj(ILuaState lua, int index)
    {
        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<ParticleSystem>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    static int M_Pause(ILuaState lua)
    {
        ParticleSystem self = Lua2Obj(lua, 1);
        self.Pause();
        return 0;
    }

    static int M_Play(ILuaState lua)
    {
        ParticleSystem self = Lua2Obj(lua, 1);
        self.Play();
        return 0;
    }

    static int M_Simulate(ILuaState lua)
    {
        ParticleSystem self = Lua2Obj(lua, 1);
        float p = (float)lua.L_CheckNumber(2);
        self.Simulate(p);
        return 0;
    }

    static int M_Stop(ILuaState lua)
    {
        ParticleSystem self = Lua2Obj(lua, 1);
        self.Stop();
        return 0;
    }
}

