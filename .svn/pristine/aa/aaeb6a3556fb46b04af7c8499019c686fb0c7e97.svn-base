using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;
  
class LuaCMUISliderLib
{
    class CMUISliderInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(UISlider); } }
        public string name { get { return LuaCMUISliderLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUISliderLib._wrap(lua, cmp as UISlider);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    //static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUISlider";


    public static int OpenLib(ILuaState lua)
    {
        
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("GetValue",M_GetValue),
            new NameFuncPair("SetValue",M_SetValue),
        };
        
        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMUISliderInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, UISlider comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static UISlider Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<UISlider>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    static int M_GetValue(ILuaState lua)
    {
        //in self
        //out float
        UISlider self = Lua2Obj(lua, 1);
        lua.PushNumber(self.value);
        return 1;
    }

    static int M_SetValue(ILuaState lua)
    {
        //in self,float
        //out void
        UISlider self = Lua2Obj(lua, 1);
        float v = (float)lua.L_CheckNumber(2);
        self.value = v;
        return 0;
    }
}
 