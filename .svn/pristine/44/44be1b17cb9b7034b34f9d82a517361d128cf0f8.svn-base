using UnityEngine;
using System.Collections;

public class QKGameSetting
{

    static float m_soundVolume = 1.0f;//音量大小，0是关闭

    public delegate void onSoundVolumeChg(float soundVolume);
    public static event onSoundVolumeChg OnSoundVolumeChg;
    public static void PostSoundVolumeChg(float soundVolume) //音效
    {
        m_soundVolume = soundVolume;
        if (OnSoundVolumeChg != null)
            OnSoundVolumeChg(soundVolume);
        //Cookies.SetFloat("SoundVolume", soundVolume);
    }
    public static float Volume
    {
        get
        {
            return m_soundVolume;
        }
    
    }
    
}
