using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;

class LuaSData_Id2StringLibs
{
    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();


    public const string LIB_NAME = "SData_Id2String";

    public static int OpenLib(ILuaState lua)
    {

        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {
            
            
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
            new NameFuncPair("Get",S_Get),    
        };
        m_ClassRegHelper.RegStatics(lua, static_define);

        return 1;
    }


    /// <summary>
    /// 获取一行文字
    /// </summary>
    /// <param name="lua"></param>
    /// <returns></returns>
    static int S_Get(ILuaState lua)
    {
        //in id
        //out string
        int id = lua.L_CheckInteger(1);

        string str = SData_Id2String.Single.Get(id);
        lua.PushString(str);
        return 1;
    }
}