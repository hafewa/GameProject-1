using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;


public class LuaEventLib
{
    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper(); 

     
    public const string LIB_NAME = "QKEvent";

    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {
            new NameFuncPair("RemoveCallback",M_RemoveCallback),
            new NameFuncPair("AddCallback",M_AddCallback),
           
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
            //new NameFuncPair("new",F_new),//绝对不能提供new 给脚本，不安全 
            
        };
        m_ClassRegHelper.RegStatics(lua, static_define);

        return 1;
    }

    //每次获取对象时，重新产生包装类
    public static void _wrap(ILuaState lua, IQKEvent evtObj)
    {
        NameValuePair[] propertys = new NameValuePair[]
        {
            new NameValuePair(LuaOpenLibs.OBJ_HANDELNAME,evtObj),
        };
        m_ClassRegHelper.InstanceLuaClass(lua, propertys);
    }

    public static IQKEvent Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);
        return LuaMemberHelper.GetObject<IQKEvent>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    static int M_AddCallback(ILuaState lua)
    {
        //in self,class,func
        //out evtCallBackHandel
        IQKEvent self = Lua2Obj(lua, 1);

        LuaEventCallback cbk = LuaRoot.LDelegate2Event<LuaEventCallback>(self, lua, 2, 3);

        lua.PushLightUserData(cbk);
        return 1;
    }


    static int M_RemoveCallback(ILuaState lua)
    {
        //in evtself evtCallBackHandel
        //out void

       LuaMemberHelper.CheckClass(lua, 1);
        LuaEventCallback callBack = (LuaEventCallback)lua.ToUserData(2);

        QKEvent obj = LuaMemberHelper.GetObject<QKEvent>(lua, 1, LuaOpenLibs.OBJ_HANDELNAME);
        obj.RemoveCallback(callBack);
        return 0;
    }
}
 
