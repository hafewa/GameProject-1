using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class DisplayerManager : MonoEX.Singleton<DisplayerManager>
{
    private Dictionary<int, GameObject> _allDisPlayDict;
    public DisplayerManager()
    {
        _allDisPlayDict = new Dictionary<int, GameObject>();
    }

    public void AddElement(ObjectID objId, GameObject gameObj)
    {
        gameObj.GetComponent<MFAModelRender>().ObjId = objId;

        switch (objId.ObjType)
        {
            case ObjectID.ObjectType.MySoldier:
                _allDisPlayDict.Add(objId.ID, gameObj);
                break;
        }
    }

    public GameObject GetElementById(ObjectID objId)
    {
        switch (objId.ObjType)
        {
            case ObjectID.ObjectType.MySoldier:
                if (_allDisPlayDict.ContainsKey(objId.ID))
                {
                    return _allDisPlayDict[objId.ID];
                }
                break;
        }
        return null;
    }
    

    public Dictionary<int, GameObject> AllDisPlayDict
    {
        get { return _allDisPlayDict; }
    }
}
