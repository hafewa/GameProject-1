using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMUIDragScrollViewLib
{
    class CMUIDragScrollViewInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(UIDragScrollView); } }
        public string name { get { return LuaCMUIDragScrollViewLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUIDragScrollViewLib._wrap(lua, cmp as UIDragScrollView);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
   // static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUIDragScrollView";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("SetScrollView",M_SetScrollView) 
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMUIDragScrollViewInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, UIDragScrollView comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static UIDragScrollView Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<UIDragScrollView>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    public static int M_SetScrollView(ILuaState lua)
    {
        //in self,CMUIScrollView

        var self = Lua2Obj(lua, 1);

        self.scrollView = lua.IsNil(2) ? null : LuaCMUIScrollViewLib.Lua2Obj(lua, 2);
        return 0;
    }
}
 
