using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UnityEngine;
using UniLua;

class LuaBackgroundMusicManageLib
{
    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
   // static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "BackgroundMusicManage";

    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {
            
        };


        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {  
            new NameFuncPair("Stop",S_Stop), 
            new NameFuncPair("Play",S_Play), 
            new NameFuncPair("SetVolume",S_SetVolume), 
        };
        m_ClassRegHelper.RegStatics(lua, static_define);

        return 1;
    }

    public static int S_Play(ILuaState lua)
    {
        //in packname,clipname,fadeOutTime
        //out nil 
        string packname = lua.L_CheckString(1);
        string clipname = lua.L_CheckString(2);
        float fadeOutTime = (float)lua.L_CheckNumber(3);

        BackgroundMusicManage.Single.Play(packname,clipname, fadeOutTime);

        return 0;
    }

    public static int S_Stop(ILuaState lua)
    {
        //in fadeOutTime
        float fadeOutTime = (float)lua.L_CheckNumber(1);
        BackgroundMusicManage.Single.Stop(fadeOutTime);
        return 0;
    }

    public static int S_SetVolume(ILuaState lua)
    {
        float volume = (float)lua.L_CheckNumber(1);
        BackgroundMusicManage.Single.SetVolume(volume);
        return 0;
    }
   
} 
