using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UnityEngine;
using UniLua;

class LuaCMAvatarAnimator_ManualLib
{

    class CMAvatarAnimator_ManualInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(AvatarAnimator_Manual); } }
        public string name { get { return LuaCMAvatarAnimator_ManualLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMAvatarAnimator_ManualLib._wrap(lua, cmp as AvatarAnimator_Manual);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper(); 

    public const string LIB_NAME = "CMAvatarAnimator_Manual";

    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("GetFlip",M_GetFlip),
            new NameFuncPair("SetFlip",M_SetFlip),
             new NameFuncPair("ManualPlayByTime",M_ManualPlayByTime),
             new NameFuncPair("GetClipLength",M_GetClipLength),
             
            
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMAvatarAnimator_ManualInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, AvatarAnimator_Manual comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static AvatarAnimator_Manual Lua2Obj(ILuaState lua, int index)
    {
        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<AvatarAnimator_Manual>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }
     

    static int M_GetFlip(ILuaState lua)
    {
        //in self
        //out SpriteFlip
        AvatarAnimator_Manual self = Lua2Obj(lua, 1);
        lua.PushInteger((int)self.flip);
        return 1;
    }

    static int M_SetFlip(ILuaState lua)
    {
        //in self,SpriteFlip
        //out nil
        AvatarAnimator_Manual self = Lua2Obj(lua, 1);
        int flip =lua.L_CheckInteger(2);
        self.flip = (Flip)flip;
        return 0;
    }

    static int M_ManualPlayByTime(ILuaState lua)
    {
        //in self,clipName,time[,isLoop]
        //out void
        int n = lua.GetTop();
        AvatarAnimator_Manual self = Lua2Obj(lua, 1);
        string clipName = lua.L_CheckString(2);
        float time = (float)lua.L_CheckNumber(3);
        bool isLoop = n > 3 ? lua.ToBoolean(4) : true;
        self.ManualPlayByTime(clipName, time, isLoop);

        return 0;
    }

    static int M_GetClipLength(ILuaState lua)
    {
        //in self,clipName
        //out nil
        AvatarAnimator_Manual self = Lua2Obj(lua, 1);
        string clipName = lua.L_CheckString(2);
        lua.PushNumber(self.GetClipLength(clipName));

        return 1;
    }

    //GetClipLength
} 
