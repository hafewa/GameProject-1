using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMAnimationEventsTriggerLib
{
    class CMAnimationEventsTriggerInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(AnimationEventsTrigger); } }
        public string name { get { return LuaCMAnimationEventsTriggerLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMAnimationEventsTriggerLib._wrap(lua, cmp as AnimationEventsTrigger);

        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper(); 

    public const string LIB_NAME = "CMAnimationEventsTrigger";

    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
           // new NameFuncPair("SetIsEnabled",M_SetIsEnabled), 
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
            
        };

        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        //注册组件
        LuaGameObjectLib.RegComponent(new CMAnimationEventsTriggerInfo());


        //导出事件接口 
        {
            KeyValuePair<string, QKEvent>[] evts = new KeyValuePair<string, QKEvent>[]
            {
                new KeyValuePair<string, QKEvent>("OnCallEvent",evt_OnCallEvent), 
            };

            foreach (KeyValuePair<string, QKEvent> curr in evts)
            {
                lua.PushString(curr.Key);
                LuaEventLib._wrap(lua, curr.Value);
                lua.RawSet(-3);
            }
        }

        //绑定事件
        AnimationEventsTrigger.OnCallEvent += OnCallEvent; 

        return 1;
    }

   
    public static void _wrap(ILuaState lua, AnimationEventsTrigger comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static AnimationEventsTrigger Lua2Obj(ILuaState lua, int index)
    {
        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<AnimationEventsTrigger>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    } 


    static void OnCallEvent(GameObject gameObject, string evtName)
    {
        LuaRoot._Lua.CreateTable(0, 0);

        LuaRoot._Lua.PushString("gameObject");
        LuaGameObjectLib._wrap(LuaRoot._Lua,gameObject);
        LuaRoot._Lua.RawSet(-3);

        LuaRoot._Lua.PushString("evtName");
        LuaRoot._Lua.PushString(evtName);
        LuaRoot._Lua.RawSet(-3);

        int refTab = LuaRoot._Lua.L_Ref(LuaDef.LUA_REGISTRYINDEX); 
        using (LuaValue_Any anyV = new LuaValue_Any(refTab))
        {
            evt_OnCallEvent.Call(anyV);
        }  
    }


    static QKEvent evt_OnCallEvent = new QKEvent(); 
} 