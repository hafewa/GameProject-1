using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

class LuaCMHtmlViewLib
{
    class CMHtmlViewInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(NGUIHTML); } }
        public string name { get { return LuaCMHtmlViewLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMHtmlViewLib._wrap(lua, cmp as NGUIHTML);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    //static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMHtmlView";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {             
            new NameFuncPair("GetHtml",M_GetHtml), 
            new NameFuncPair("SetHtml",M_SetHtml), 
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMHtmlViewInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, NGUIHTML comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static NGUIHTML Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<NGUIHTML>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }



    static int M_GetHtml(ILuaState lua)
    {
        //in self 
        //out string
        NGUIHTML self = Lua2Obj(lua, 1);

        lua.PushString(self.html);
        return 1;
    }

    static int M_SetHtml(ILuaState lua)
    {
        //in self,htmltext
        //out nil
        NGUIHTML self = Lua2Obj(lua, 1);
        self.html = lua.L_CheckString(2);
        return 0;
    }
     
}
 
