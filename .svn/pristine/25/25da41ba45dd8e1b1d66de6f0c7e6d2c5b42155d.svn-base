using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;

 
class LuaCMRendererLib
{
    
    class CMRendererInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(Renderer); } }
        public string name { get { return LuaCMRendererLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMRendererLib._wrap(lua, cmp as Renderer);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
    //static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMRenderer";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        {
           
            new NameFuncPair("GetMaterial",M_GetMaterial),
            new NameFuncPair("SetMaterial",M_SetMaterial),

            
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMRendererInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, Renderer comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static Renderer Lua2Obj(ILuaState lua, int index)
    {
        LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<Renderer>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }



    //
    static int M_GetMaterial(ILuaState lua)
    {
        //in self
        //out Material
        Renderer self = Lua2Obj(lua, 1);
        LuaMaterialLib._wrap(lua,self.material);
        return 1;
    }

    static int M_SetMaterial(ILuaState lua)
    {
        //in self,Material
        //out nil
        Renderer self = Lua2Obj(lua, 1);
        self.material = LuaMaterialLib.Lua2Obj(lua, 2);
        return 0;
    }
}
 