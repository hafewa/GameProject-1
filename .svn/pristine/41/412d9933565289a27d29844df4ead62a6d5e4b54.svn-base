using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using UniLua;
using UnityEngine;


class LuaCMUIToggleLib
{
    class CMUIToggleInfo : ICoreComponentInfo
    {
        public Type type { get { return typeof(UIToggle); } }
        public string name { get { return LuaCMUIToggleLib.LIB_NAME; } }
        public void newLuaObj(ILuaState lua, Component cmp)
        {
            LuaCMUIToggleLib._wrap(lua, cmp as UIToggle);
        }
    }

    static LuaClassRegHelper m_ClassRegHelper = new LuaClassRegHelper();
   // static LuaMemberHelper m_MemberHelper = new LuaMemberHelper();

    public const string LIB_NAME = "CMUIToggle";


    public static int OpenLib(ILuaState lua)
    {
        //注册成员函数
        NameFuncPair[] member_define = new NameFuncPair[]
        { 
            new NameFuncPair("GetValue",M_GetValue),
            new NameFuncPair("SetValue",M_SetValue),
            new NameFuncPair("GetGroup",M_GetGroup),
        };

        NameFuncPair[] operator_define = new NameFuncPair[]
        {
           
        };

        m_ClassRegHelper.RegMembers(lua, member_define, operator_define);


        //注册静态成员
        NameFuncPair[] static_define = new NameFuncPair[]
        {
           
            
        };
        //注册静态属性
        NameValuePair[] static_property = new NameValuePair[]
        {
            new NameValuePair("Name",LIB_NAME),
        };
        m_ClassRegHelper.RegStatics(lua, static_define, static_property);

        LuaGameObjectLib.RegComponent(new CMUIToggleInfo());

        return 1;
    }

    public static void _wrap(ILuaState lua, UIToggle comp)
    {
        LuaOpenLibs._wrapComponent(lua, comp, LIB_NAME, m_ClassRegHelper);
    }

    public static UIToggle Lua2Obj(ILuaState lua, int index)
    {
       LuaMemberHelper.CheckClass(lua, index);

        return LuaMemberHelper.GetObject<UIToggle>(lua, index, LuaOpenLibs.OBJ_HANDELNAME);
    }

    static int M_GetGroup(ILuaState lua)
    {
        //in self
        //out int
        UIToggle self = Lua2Obj(lua, 1);
        lua.PushInteger(self.group);
        return 1;
    }

    static int M_GetValue(ILuaState lua)
    {
        //in self
        //out boolean
        UIToggle self = Lua2Obj(lua, 1);
        lua.PushBoolean(self.value);

        return 1;
    }

    static int M_SetValue(ILuaState lua)
    {
        //in self,v
        //out void
        UIToggle self = Lua2Obj(lua, 1);
        bool v = lua.ToBoolean(2);
        self.value = v;
        return 0;
    }
     
}

