using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class DisplayerManager : MonoEX.Singleton<DisplayerManager>
{
    private Dictionary<int, DisplayOwner> _allDisPlayDict;
    public DisplayerManager()
    {
        _allDisPlayDict = new Dictionary<int, DisplayOwner>();
    }

    public void AddElement(ObjectID objId, DisplayOwner owner)
    {
        owner.MFAModelRender.ObjId = objId;

        switch (objId.ObjType)
        {
            case ObjectID.ObjectType.MySoldier:
                _allDisPlayDict.Add(objId.ID, owner);
                break;
        }
    }

    public DisplayOwner GetElementById(ObjectID objId)
    {
        switch (objId.ObjType)
        {
            case ObjectID.ObjectType.MySoldier:
                if (_allDisPlayDict.ContainsKey(objId.ID))
                {
                    return _allDisPlayDict[objId.ID];
                }
                break;
        }
        return null;
    }
    

    public Dictionary<int, DisplayOwner> AllDisPlayDict
    {
        get { return _allDisPlayDict; }
    }
}
